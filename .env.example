# ========= APP CONFIG =========
APP_NAME=AcadEasy
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
APP_PORT=80

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ========= LOGGING =========
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# ========= DATABASE =========
MYSQL_ROOT_PASSWORD=mysqlrootpass_CHANGE_THIS
MYSQL_DATABASE=acadeasy
MYSQL_USER=acadeasy
MYSQL_PASSWORD=mysqlpass_CHANGE_THIS

# ========= LARAVEL DB CONFIG =========
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=acadeasy
DB_USERNAME=acadeasy
DB_PASSWORD=supersecretuserpass_CHANGE_THIS

# ========= SESSION / CACHE / QUEUE =========
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false

CACHE_DRIVER=database
CACHE_PREFIX=acadeasy_cache

QUEUE_CONNECTION=database

# ========= MAIL =========
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========= REDIS (opsional, untuk performa lebih baik) =========
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========= BROADCAST (opsional) =========
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# ========= AWS S3 (jika menggunakan S3 untuk storage) =========
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ========= FRONTEND =========
VITE_APP_NAME="${APP_NAME}"

# ========= SECURITY (Production) =========
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1